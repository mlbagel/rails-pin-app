<% if !@errors.nil? %>
<div class="alert alert-danger">
  <label class="rails-bootstrap-forms-error-summary col-xlg-offset-3 col-xlg-6"><%= pluralize(@errors.count, "error") %> User credentials not verified</label>
    <ul>
      <% @errors.full_messages.each do |msg| %>
        <li><strong><%= "#{msg}" %></strong></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="header">
  <h1>Login</h1>
</div>

<div class="form-group">
  <%= form_tag '/login' %>


  <div class="field col-xlg-8">
    <%= email_field_tag 'email', 'email@' %>
  </div>

  <div class="field col-xlg-8">
    <%= password_field_tag 'pass', 'Password' %>
  </div>

  <div class="field col-xlg-8">
    <%= submit_tag(value='Submit') %>
  </div>
</div>
